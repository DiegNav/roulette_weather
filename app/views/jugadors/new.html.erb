<h1>Nuevo Jugador</h1>

<%= form_with(model: @jugador, url: jugadors_path, local: true) do |form| %>
  <div>
    <%= form.label :nombre, 'Nombre del jugador' %><br>
    <%= form.text_field :nombre %>
  </div>
  <div>
    <%= form.label :puntos, 'Puntos base (opcional)' %><br>
    <%= form.number_field :puntos, value: 10000 %>
  </div>
  <div>
    <%= form.submit 'Crear Jugador', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Volver', jugadors_path, class: 'btn btn-secondary' %>