<div class="max-w-md mx-auto mt-12 bg-white shadow-lg rounded-xl p-8">
  <h1 class="text-5xl font-bold text-center text-indigo-700 mb-10">Nuevo Jugador</h1>

  <%= form_with(model: @jugador, url: jugadors_path, local: true) do |form| %>
    <div class="mb-6">
      <%= form.label :nombre, 'Nombre del jugador', class: 'block text-gray-700 font-semibold mb-2' %>
      <%= form.text_field :nombre, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400' %>
    </div>
    <div class="mb-6">
      <%= form.label :dinero, 'Dinero inicial', class: 'block text-gray-700 font-semibold mb-2' %>
      <%= form.number_field :dinero, value: 10000, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400' %>
    </div>
    <div class="flex justify-between items-center w-full mt-10 gap-10">
      <%= form.submit 'Crear Jugador', class: 'bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-2 rounded-lg shadow transition' %>
      <%= link_to 'Volver', root_path, class: 'inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold px-6 py-2 rounded-lg shadow transition' %>
    </div>
  <% end %>
</div>