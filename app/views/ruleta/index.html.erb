<h1>Ruleta del Clima</h1>

<% if Jugada.last&.max_temp %>
  <p><strong>Temperatura máxima pronosticada en Santiago (próximos días):</strong> <%= Jugada.last.max_temp %> °C</p>
<% end %>

<%= link_to 'Crear nuevo jugador', new_jugador_path, class: 'btn btn-info' %>
<br><br>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dinero</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% Jugador.all.each do |jugador| %>
      <tr>
        <td><%= jugador.nombre %></td>
        <td><%= jugador.dinero %></td>
        <td>
          <%= button_to 'Eliminar', jugador_path(jugador), method: :delete, data: { turbo_confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'Girar Ruleta', girar_ruleta_path, method: :get, class: 'btn btn-primary' %>
<%= button_to 'Reiniciar Juego', reiniciar_ruleta_path, method: :get, class: 'btn btn-danger' %>

<h2>Historial de Jugadas</h2>
<% Jugada.order(created_at: :desc).each_with_index do |jugada, i| %>
  <h3>Ronda <%= Jugada.count - i %> - <%= jugada.created_at.strftime('%d/%m/%Y %H:%M') %> - Color ganador: <%= jugada.color_ganador %> <% if jugada.max_temp %> | Temp máx: <%= jugada.max_temp %> °C <% end %></h3>
  <table>
    <thead>
      <tr>
        <th>Jugador</th>
        <th>Color Apostado</th>
        <th>Apuesta</th>
        <th>Dinero Obtenido</th>
      </tr>
    </thead>
    <tbody>
      <% jugada.historial_jugadas.each do |jj| %>
        <tr>
          <td><%= jj.jugador.nombre %></td>
          <td><%= jj.color_apostado %></td>
          <td><%= jj.apuesta %></td>
          <td><%= jj.dinero_obtenido %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
